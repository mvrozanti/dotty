{
    "mkdirs": ["~/.vim"],
    
    "link": {
        "source": "dest",
        "zshrc": "~/.zshrc",

        "emacs/lisp/": "~/.emacs.d/lisp"
    },

    "copy": {
        "source": "dest",
        "offlineimaprc": "~/.offlineimaprc"
    },

    "install_cmd": "pacaur -Syu",
    "install": [
        "zsh",
        "emacs"
    ],
		
    "commands": [
        "emacs -batch -Q -l ~/.emacs.d/firstrun.el"
    ]
}
